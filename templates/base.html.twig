<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>{% block title %}My Blog{% endblock %}</title>
    {% block stylesheets %}
    {% endblock %}

    {% block javascripts %}
        {% block importmap %}{{ importmap('app') }}{% endblock %}
    {% endblock %}
    <link rel="stylesheet" href="{{ asset('css/app.css') }}">
</head>
<body>
<header>
    <div class="container nav-container">
        <h1 class="site-title"><a href="{{ path('app_home') }}">My Blog</a></h1>
        <nav>
            <ul class="nav-links">
                <li><a href="{{ path('app_home') }}">Home</a></li>
                <li><a href="{{ path('app_post') }}">Posts</a></li>
                {% if app.user %}
                    <li><a href="{{ path('app_logout') }}">Logout</a></li>
                {% endif %}
            </ul>
        </nav>
    </div>
</header>


<main class="container">
    {% block body %}{% endblock %}
</main>

<footer>
    <div class="container">
        <p>&copy; {{ "now"|date("Y") }} My Blog</p>
    </div>
</footer>
</body>
</html>
