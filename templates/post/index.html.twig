{% extends 'base.html.twig' %}

{% block title %}Blog{% endblock %}

{% block body %}
    <h2>Recent Posts</h2>

    {% for post in posts %}
        <div class="post">
            <h3 class="post-title">
                <a href="{{ path('app_show_post', { slug: post.slug }) }}">{{ post.title }}</a>
            </h3>
            <div class="post-meta">
                Posted on {{ post.createdAt|date('F j, Y') }}
            </div>
            <p>{{ post.content|raw }}</p>
        </div>
    {% else %}
        <p>No blog posts found.</p>
    {% endfor %}
{% endblock %}
