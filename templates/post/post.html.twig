{% extends 'base.html.twig' %}

{% block title %}{{ post.title }}{% endblock %}

{% block body %}
    <div class="post">
        <h2 class="post-title">{{ post.title }}</h2>
        <div class="post-meta">
            Posted on {{ post.createdAt|date('F j, Y') }}
        </div>
        <p>{{ post.content|raw }}</p>
    </div>

    <p><a href="{{ path('app_home') }}">‚Üê Back to blog</a></p>
{% endblock %}
